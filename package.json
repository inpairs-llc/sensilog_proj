{
  "name": "sensilog-monorepo",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm --filter web dev & pnpm --filter api dev",
    "dev:web": "pnpm --filter web dev",
    "dev:api": "pnpm --filter api dev",
    "build": "pnpm --filter api build && pnpm --filter web build",
    "build:web": "pnpm --filter web build",
    "build:api": "pnpm --filter api build",
    "start:api": "pnpm --filter api start",
    "lint": "pnpm -r run lint --fix",
    "type-check": "pnpm -r run type-check",
    "format": "prettier --write \"apps/*/src/**/*.{ts,tsx}\"",
    "format:check": "prettier --check \"apps/*/src/**/*.{ts,tsx}\"",
    "db:push": "pnpm --filter api exec prisma db push",
    "db:studio": "pnpm --filter api exec prisma studio",
    "db:generate": "pnpm --filter api exec prisma generate",
    "db:migrate": "pnpm --filter api exec prisma migrate dev",
    "generate:gql": "pnpm --filter web exec graphql-codegen --config codegen.ts"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "prettier": "^3.0.0",
    "ts-node": "^10.9.0"
  },
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  }
}